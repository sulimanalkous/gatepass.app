{% extends '::base.html.twig' %}

{% block body %}


    <div class="col-sm-9 col-md-6 col-lg-8">

        <h3>{{ headerName }}</h3>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-4 pull-left">
            </div>
            <div class="col-sm-6 pull-right">
                <div class="dataTables_filter" id="example_filter">
                    <input aria-controls="example" placeholder="بحث" class="form-control input-sm"
                           type="search">
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover table-users">
            <thead>
            <tr>
                <th>#</th>
                <th>الأسم</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for data in datas %}
            <tr>
                <td>{{ data.id }}</td>
                <td>{{ data.name }}</td>
                <td>
                    <a class="btn mini blue-stripe" href="/common/edit/{{ data.id }}/{{ table }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a href="/common/{{ data.id }}/{{ table }}" class="btn mini btn-link"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div><a href="/common/create/{{ table }}" class="btn btn-primary btn-default"><span class="glyphicon glyphicon-plus"></span> جديد</a>
        </div>
    </div>
{% endblock %}